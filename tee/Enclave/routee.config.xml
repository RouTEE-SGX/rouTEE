<!-- Please refer to User's Guide for the explanation of each field -->
<!-- https://download.01.org/intel-sgx/linux-2.1.3/docs/Intel_SGX_Developer_Reference_Linux_2.1.3_Open_Source.pdf (ctrl+F: "Enclave Configuration File") -->
<EnclaveConfiguration>

  <!-- ProdID: Independent Software Vendors (ISV) assigned Product ID (default: 0) -->
  <ProdID>0</ProdID>

  <!-- ISVSVN: ISV assigned Security Version Number (SVN) (default: 0)  -->
  <ISVSVN>0</ISVSVN>

  <!-- StackMaxSize: The maximum stack size per thread, must be 4KB aligned (default: 0x40000 = about 262 KB (https://decdream.tistory.com/156)) -->
  <StackMaxSize>0x40000</StackMaxSize>

  <!-- HeapMaxSize: The maximum heap size for the process, must be 4KB aligned (default: 0x100000 = about 1 MB) -->
  <HeapMaxSize>0x55F0000</HeapMaxSize>

  <!-- TCSNum: The number of Thread Control Structure (TCS), must be greater than 0 (TCSNum = # of thread) (default: 1) -->
  <TCSNum>4</TCSNum>

  <!-- TCS management policy (default: 1)
  0 – TCS is bound to the untrusted thread
  1 – TCS is not bound to the untrusted thread -->
  <TCSPolicy>1</TCSPolicy>

  <!-- DisableDebug: Enclave cannot be debugged (default: 0 = enclave can be debugged) -->
  <!-- Recommend changing 'DisableDebug' to 1 to make the enclave undebuggable for enclave release -->
  <DisableDebug>0</DisableDebug>

  <!-- MiscSelect: The desired Misc feature (default: 0) -->
  <MiscSelect>0</MiscSelect>

  <!-- MiscMask: The mask bits for the Misc feature (default: 0xFFFFFFFF) -->
  <MiscMask>0xFFFFFFFF</MiscMask>

</EnclaveConfiguration>
